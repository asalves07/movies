
<div class="row">
  <div class="col-sm-3">
    <ul class="list-group mt-4">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Tudo
        <span class="badge badge-light badge-pill"><%= @movies['results'].count %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Filmes
        <span class="badge badge-light badge-pill"><%= count_movie(@movies) %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Seriados
        <span class="badge badge-light badge-pill"><%= count_tv(@movies) %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Pessoas
        <span class="badge badge-light badge-pill"><%= count_people(@movies) %></span>
      </li>
    </ul>
  </div>

  <div class="col-sm-9">
    <% @movies['results'].each do |movie| %>
      <div class="card shadow mt-4" >
        <div class="row">
          <div class="col-md-4">
            <%= image_tag("https://image.tmdb.org/t/p/w200/#{movie['poster_path']}", class:"img-fluid rounded-left" ) %>
          </div>
          <div class="col-md-8">
          <h2 class="card-title mt-3"><%= movie['title'] %></h2>
          <span><%= movie['release_date'] %></span>
          <p><%= movie['overview'].truncate(200) unless movie['overview'].blank? %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


