<div class="row">
  <div class="col-sm-3">
    <ul class="list-group mt-4">
      <li class="list-group-item d-flex justify-content-between align-items-center btn-primary active">
        Resultado da Busca
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to 'Tudo', '#'%>  
        <span class="badge badge-secondary badge-pill"><%= @search['total_results'] %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Filmes 
        <span class="badge badge-secondary badge-pill"><%= @movies['total_results'] %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Seriados 
        <span class="badge badge-secondary badge-pill"><%= @tv['total_results'] %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Pessoas
        <span class="badge badge-secondary badge-pill"><%= @people['total_results'] %></span>
      </li>
    </ul>
  </div>

  <div class="col-sm-9">
    <% @search['results'].each do |movie| %>
      <div class="card shadow mt-4" >
        <div class="row">
          <div class="col-md-4">
            <%= link_to image_tag("https://image.tmdb.org/t/p/w200/#{movie['poster_path']}", class:"img-fluid rounded-left" ), welcome_show_path, remote: true%>
          </div>
          <div class="col-md-8">
            <h2 class="card-title mt-3"><%= title_name(movie) %></h2>
            <span><%= movie['release_date'] %></span>
            <p class = "align-items-center" ><%= movie['overview'].truncate(200) unless movie['overview'].blank? %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>






