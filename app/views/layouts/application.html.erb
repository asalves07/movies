<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Movies</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-blue">
      <%= link_to 'TMDb', root_path, class: "navbar-brand font-weight-bold" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'Filmes locais', movies_path, class: "nav-link font-weight-bold", id:"locais" %>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% unless user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Entrar', new_user_session_path, class: "nav-link", id:"login" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Junte-se ao TMDb', new_user_registration_path, class: "nav-link", id:"signup" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: " nav-link"  %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <!-- End Navbar -->

    <!-- Searchbar -->
    <section class="search-bar">
      <div class="container">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <%= form_with(url: welcome_search_path, local:true, method: :get) do |form| %>
              <div class="input-group">
                <%= form.text_field :term, class:"form-control border-0 bg-light", placeholder:"Buscar por um filme, SÃ©rie ou Pessoa..." %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
    <!-- End Searchbar -->

    <!-- Carousel -->
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag("img.jpg", class:"d-block w-100" ) %>
        </div>
        <div class="carousel-item">
          <%= image_tag("img2.jpg", class:"d-block w-100" ) %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <!-- End Carousel -->


    <div class="container">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <div>
        <%= yield %>
      </div>
    </div>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>

