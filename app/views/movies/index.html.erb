<div class="row">
  <h1>Filmes locais</h1>
  <div class="card-deck">
    <% @movies.each do |movie| %>
      <div class="col-sm-3">
        <div class="card mt-4">
          <%= image_tag("https://image.tmdb.org/t/p/w200/#{movie.poster_path}", class:"card-img-top") %>
          <div class="card-body">
            <h5 class="card-title"><%= movie.title.truncate(20) %></h5>
            <p class="card-text"><small class="text-muted"><%= movie.release_date %></small></p>
            <%= link_to 'Edite', edit_movie_path, class: "btn btn-warning" %>
            <%= link_to 'Deletar', movie_path, method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>